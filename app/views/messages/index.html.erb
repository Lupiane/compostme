<h2>Conversation avec <%= @conversation.user.username %></h2>
<h4>Compost: <%= @conversation.compost.address %></h4>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <ul>
        <% @messages.each do |message| %>
          <li><i>Le <%= message.created_at %>, <%= message.user.username %> a écrit:</i></li>
          <li><%= message.content %></li>
          <br>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-6">
      <h4>Ecrire un nouveau message</h4>
      <%= simple_form_for [@compost, @message] do |f| %>
        <%= f.input :content, label: false %>
        <%= f.input :conversation_id, as: :hidden, input_html: { value: @conversation.id} %>
        <%= f.submit :Envoyer%>
      <% end %>
    </div>
  </div>
</div>




<h4><%= link_to "Retour à mon profil", my_composts_path %></h4>
