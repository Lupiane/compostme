<div class="content-container">
  <div class="text-center">
    <p class= "text-left">
      <%= link_to composts_path do %>
       <%= icon('fas', 'arrow-left') %> Retour à la liste
      <% end %>
    </p>
    <% if @compost.public %>
      <h3>Compost collectif</h3>
    <% else %>
      <h3>Le compost de <%= @compost.user.username.capitalize %></h3>
    <% end %>
  </div>
  <div class="container">
    <div class="row">
      <% if @compost.public || @compost.user == current_user %>
        <div class="col-sm-12">
      <% else %>
        <div class="col-sm-6">
      <% end %>
          <h4>Description:</h4>
          <p><%= @compost.description %></p>
          <h4><%= @compost.public ? "Adresse:" : "Point de rendez-vous:"%></h4>
          <p><%= @compost.address %></p>
          <div
            id="map"
            style="width: 100%;
            height: 600px;"
            data-markers="<%= @markers.to_json %>"
          ></div>
        </div>

      <% unless @compost.public || @compost.user == current_user %>
        <div class="col-sm-6">
          <div class="form-container">
            <div class="form-heading text-center">
              <h3>Contactez <%= @compost.user.username.capitalize %>:</h3>
            </div>
            <%= simple_form_for [@compost, @message] do |f| %>
              <%= f.input :content, label: false, input_html: { rows: 8 } %>
              <div class="form-submit text-center">
                <%= f.submit :Envoyer, class: "btn-rounded btn-success" %>
              </div>
            <% end %>
          </div>
      </div>
    <% end %>
    </div>
  </div>
</div>


