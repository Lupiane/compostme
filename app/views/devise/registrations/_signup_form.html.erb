<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, label: "Pseudo", autofocus: true %>
    <%= f.input :email, label: "Email", required: true %>
    <%= f.input :password, label: "Mot de passe", required: true, hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirmation du mot de passe", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Je m'inscris", class: "btn btn-success login-btn" %>
  </div>
<% end %>
