<% content_for(:meta_title) { "Modifier votre profil" } %>

<div class="content-container">
   <p class= "text-left">
    <%= link_to :back do %>
     <%= icon('fas', 'arrow-left') %> Retour
    <% end %>
  </p>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="form-container">
          <div class="form-heading text-center">
            <h2>Modifier votre profil</h2>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :username, label: "Pseudo", required: true, autofocus: true %>
              <%= f.input :email, label: "Email", required: true, autofocus: true %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <%= f.input :password, label: "Mot de passe", autocomplete: "off", hint: "laisser en blanc si vous ne voulez pas le modifier", required: false %>
              <%= f.input :password_confirmation, label: "Confirmation du mot de passe", required: false %>
              <%= f.input :current_password, label: "Mot de passe actuel", hint: "votre mot de passe actuel est nÃ©cessaire pour effectuer les modifications", required: true %>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Update", class:"btn btn-success login-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>







